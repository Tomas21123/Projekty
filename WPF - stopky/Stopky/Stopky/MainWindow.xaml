<Window x:Class="Stopky.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stopky"
        mc:Ignorable="d"
        Title="Stopky" Height="450" Width="800">

    <Window.Resources>
        <Style x:Key="StylBTN" TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Height" Value="34" />
            <Setter Property="Width" Value="132" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Content="{TemplateBinding Content}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="StylTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF16304A"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Levý sloupec: zabírá 1/4 -->
        <ScrollViewer Grid.Column="0" Background="White"
              VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled"
              PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
            <!-- Odstraň StackPanel, ListBox už obsahuje vlastní ScrollViewer -->
            <ListBox ItemsSource="{Binding CasoveZaznamy}" Margin="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,8">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <!-- První řádek: text s poradi a casem -->
                            <TextBlock Grid.Row="0" VerticalAlignment="Center" Margin="5"
                               Foreground="#FF16304A"
                               FontFamily="Bahnschrift"
                               FontWeight="Bold"
                               FontSize="18">
                                <TextBlock.Text>
                                    <!-- MultiBinding kombinuje číslo a čas do jednoho stringu -->
                                    <MultiBinding StringFormat="Čas {0}:   {1}">
                                        <Binding Path="Poradi"/>
                                        <Binding Path="Cas"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>

                            <!-- Druhý řádek: tlačítko odstranění -->
                            <Button Grid.Row="1" Content="ODSTRANIT"
                            Click="DeleteButton_Click"
                            HorizontalAlignment="Right"
                            Style="{StaticResource StylBTN}"
                            VerticalAlignment="Center"
                            Margin="5"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>



        <!-- Pravý sloupec: zabírá 3/4 -->
        <StackPanel Grid.Column="1">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF8AC1BF" Offset="0"/>
                    <GradientStop Color="#FFCEDADA" Offset="1"/>
                    <GradientStop Color="#FFABCECE" Offset="0.669"/>
                </LinearGradientBrush>
            </StackPanel.Background>
        </StackPanel>

        <TextBlock Height="64" TextWrapping="Wrap" Width="192" Style="{StaticResource StylTextBlock}" FontWeight="Bold" FontSize="48" TextAlignment="Center" Grid.Column="1" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"><Run Language="cs-cz" Text="Stopky"/></TextBlock>

        <Button Grid.Column="1" Content="Uložit čas" Click="AddButton_Click" Style="{StaticResource StylBTN}" HorizontalAlignment="Center" Height="34" Margin="0,338,0,0" VerticalAlignment="Top" Width="112" Background="#FF2985EB" Foreground="White"/>

        <TextBlock Grid.Column="1" x:Name="txt_aktualniCas" Style="{StaticResource StylTextBlock}" HorizontalAlignment="Center" Height="130" Margin="0,121,0,0" TextWrapping="Wrap" Text="{Binding AktualniCas, StringFormat={}{0:F2}s}" VerticalAlignment="Top" Width="242" TextAlignment="Center" FontWeight="Bold" FontSize="72"/>
        
        <Grid Grid.Column="1" Margin="0,271,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="Zapnout" Click="btn_start" Height="34" Width="132" Grid.Column="0" Margin="5" Style="{StaticResource StylBTN}"/>
            <Button Content="Stopnout" Click="btn_stop" Height="34" Width="132" Grid.Column="1" Margin="5" Style="{StaticResource StylBTN}"/>
            <Button Content="Restartovat" Click="btn_restart" Height="34" Width="132" Grid.Column="2" Margin="5" Style="{StaticResource StylBTN}"/>
        </Grid>

    </Grid>
</Window>
    
    
