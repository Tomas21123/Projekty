<Page x:Class="SlovníFotbal.Hra"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SlovníFotbal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Hra">

    <Page.Resources>
        <Style x:Key="style_textBlock" TargetType="TextBlock" >
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF006F2B"/>
        </Style>
        <Style x:Key="style_label" TargetType="Label">
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="#FF006F2B"/>
        </Style>
        <Style x:Key="style_button" TargetType="Button">
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="#FF006E2F"/>
            <Setter Property="Background" Value="#FF59BE63"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Content="{TemplateBinding Content}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="style_textBox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Bahnschrift"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="#FF006F2B"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        SnapsToDevicePixels="True">
                            <!-- mandatory part for TextBox text rendering -->
                            <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="{TemplateBinding Padding}"
                                  VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>



    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/IMG/hriste.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Levý sloupec - průhledný -->
            <Border Grid.Column="0" Background="Transparent"/>

            <!-- Prostřední sloupec - bílý -->
            <Border Grid.Column="1" Margin="0,10,0,10">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF82D175"/>
                        <GradientStop Color="#FFC5ECB8" Offset="1"/>
                        <GradientStop Color="#FF8FD784" Offset="0.301"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid Margin="12" ShowGridLines="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Zbývající čas" 
                               FontSize="24" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,6"
                               Style="{StaticResource style_textBlock}"/>

                    <TextBlock Grid.Row="1" x:Name="txt_zbivajiciCas" 
                               Text="0" FontSize="48" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,6"
                               Style="{StaticResource style_textBlock}"/>

                    <TextBlock Grid.Row="3" x:Name="txt_minuleSlovo"
                               Text="Auto"
                               FontSize="43" FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,44,0,198" Grid.RowSpan="3"
                               Width="243" TextAlignment="Center"
                               Style="{StaticResource style_textBlock}"/>

                    <TextBlock Grid.Row="3" Text="Zadané slovo:" 
                               FontSize="24" FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,12,0,6"
                               Style="{StaticResource style_textBlock}"/>
                    
                    <TextBox Grid.Row="5" x:Name="txt_zadaneSlovo"
                             Width="223" Height="36"
                             HorizontalAlignment="Center"
                             FontSize="18"
                             Background="White" Foreground="Black"
                             Text="Zadej slovo."
                             GotFocus="TxtZadaneSlovo_GotFocus"
                             LostFocus="TxtZadaneSlovo_LostFocus"
                             Margin="0,96,0,132"
                             Style="{StaticResource style_textBox}"/>

                        <Button Grid.Row="5" Content="Odpovědět" Click="btn_odpoved"
                            Width="160" Height="40" HorizontalAlignment="Center"
                            FontSize="20" FontWeight="Bold" Margin="0,164,0,60"
                            Style="{StaticResource style_button}"/>
                </Grid>
            </Border>



            <!-- Pravý sloupec - průhledný -->
            <Border Grid.Column="2" Background="Transparent"/>
        </Grid>

        <Label x:Name="lbl_kteryHrac" Content="Hrac: 1" 
               HorizontalAlignment="Left" Height="28" 
               Margin="279,248,0,0" VerticalAlignment="Top" 
               Width="121" Style="{StaticResource style_label}"/>

    </Grid>
</Page>
