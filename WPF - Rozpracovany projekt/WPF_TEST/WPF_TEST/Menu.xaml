<Page x:Class="WPF_TEST.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:user="clr-namespace:WPF_TEST.User"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu" Foreground="Black" Background="White">

    <DockPanel>
        <!-- menu nahoře -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Účet">
                <!-- Dynamický binding na aktuální email uživatele -->
                <MenuItem Header="{Binding Email, Source={x:Static user:UserSession.Instance}}"/>
                <MenuItem Header="_Odhlásit se" Click="OdhlasitSe"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>

            <MenuItem Header="_Sklad">
                <MenuItem Header="Výpis skladu" Click="VypisSklad"/>
                <MenuItem Header="Historie pohybů"/> <!-- Kdo? Kdy? Co? -->
            </MenuItem>

            <MenuItem Header="_Objednávky">
                <MenuItem Header="Výpis objednávky"/>
                <MenuItem Header="Historie objednávek"/>
            </MenuItem>

            <MenuItem Header="_Reklamace">
                <MenuItem Header="Výpis reklamací"/>
                <MenuItem Header="Historie Reklamací"/>
            </MenuItem>
        </Menu>

        <!-- Obsah stránky -->
        <Grid Grid.Row="1" Margin="20">
            <ContentControl x:Name="MainContent" Background="White" Foreground="Black" />
        </Grid>
    </DockPanel>
</Page>
