        <Button x:Name="btnPrihlaseni" Content="Přihlášení" HorizontalAlignment="Center" Height="25" Margin="0,162,0,0" VerticalAlignment="Top" Width="136" FontWeight="Bold" Click="btnPrihlaseni_Click"/>
        <Button x:Name="btnRegistrace" Content="Registrace" HorizontalAlignment="Center" Height="25" Margin="0,225,0,0" VerticalAlignment="Top" Width="136" FontWeight="Bold" Click="btnRegistrace_Click"/>

    </Grid>
</Page>
