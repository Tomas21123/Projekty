<UserControl x:Class="WPF_TEST.Knihovna.VypisKnih"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_TEST.Knihovna"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White">
    <DataGrid x:Name="KnihyDataGrid"
              AutoGenerateColumns="False"
              HeadersVisibility="Column"
              CanUserAddRows="False"
              ItemsSource="{Binding Knihy}">
      <DataGrid.Columns>
        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
        <DataGridTextColumn Header="Autor" Binding="{Binding Autor}" Width="*"/>
        <DataGridTextColumn Header="Název" Binding="{Binding Nazev}" Width="*"/>
        <DataGridTextColumn Header="Žánr" Binding="{Binding Zanr}" Width="*"/>
        <DataGridTextColumn Header="Literární druh" Binding="{Binding LitDruh}" Width="*"/>

        <!-- Sloupec 'Akce' s tlačítkem -->
        <DataGridTemplateColumn Header="Akce" Width="*">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <Button Content="Upravit"
                      Command="{Binding DataContext.KlikNaKnihuCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                      CommandParameter="{Binding Id}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
